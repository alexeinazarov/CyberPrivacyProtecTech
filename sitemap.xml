---
layout: null
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:custom="https://alexeinazarov.github.io/schemas/custom_schema"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 
                            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <url>
        <loc>{{ site.url }}{{ site.baseurl }}/</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
        <image:image>
            <image:loc>{{ site.url }}{{ site.baseurl }}/assets/images/logo.webp</image:loc>
            <image:title>Cyber Privacy Protection Tech Logo</image:title>
            <image:caption>Logo of Cyber Privacy Protection Tech, conseil en cybersécurité à Paris.</image:caption>
        </image:image>
        <custom:keywords>
            cybersecurity, privacy, data protection, consulting, Paris, Alexey Nazarov, CyberPrivacyProtecTech
        </custom:keywords>
    </url>

    {% for post in site.posts %}
    <url>
        <loc>{{ post.url | absolute_url | remove: 'index.html' }}</loc>
        <lastmod>{% if post.last_modified_at %}{{ post.last_modified_at | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
        {% if post.image %}
        <image:image>
            <image:loc>{{ post.image | absolute_url }}</image:loc>
            <image:title>{{ post.title }}</image:title>
            <image:caption>{{ post.excerpt | strip_html | truncatewords: 20 }}</image:caption>
        </image:image>
        {% endif %}
        {% if post.keywords %}
        <custom:keywords>{{ post.keywords }}</custom:keywords>
        {% endif %}
        <custom:link rel="canonical" href="{{ post.url | absolute_url }}" />
        {% if post.url contains "github-gist" %}
        <news:news>
            <news:publication>
                <news:name>Cyber Privacy News</news:name>
                <news:language>en</news:language>
            </news:publication>
            <news:title>{{ post.title }}</news:title>
            <news:publication_date>{{ post.date | date_to_xmlschema }}</news:publication_date>
        </news:news>
        {% endif %}
    </url>
    {% endfor %}

    {% for page in site.pages %}
    {% unless page.sitemap.exclude == "yes" or page.url contains "assets" %}
    <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page.url | remove: 'index.html' }}</loc>
        <lastmod>{% if page.last_modified_at %}{{ page.last_modified_at | date_to_xmlschema }}{% else %}{{ page.date | date_to_xmlschema }}{% endif %}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
        {% if page.image %}
        <image:image>
            <image:loc>{{ page.image | absolute_url }}</image:loc>
            <image:title>{{ page.title }}</image:title>
            <image:caption>{{ page.excerpt | strip_html | truncatewords: 20 }}</image:caption>
        </image:image>
        {% endif %}
        {% if page.keywords %}
        <custom:keywords>{{ page.keywords }}</custom:keywords>
        {% endif %}
        <custom:link rel="canonical" href="{{ site.url }}{{ site.baseurl }}{{ page.url | remove: 'index.html' }}" />
    </url>
    {% endunless %}
    {% endfor %}

    {% for file in site.static_files %}
    {% if file.extname == ".png" or file.extname == ".jpg" or file.extname == ".jpeg" or file.extname == ".ico" %}
    <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ file.path | remove: 'index.html' }}</loc>
        <lastmod>{{ file.modified_time | date_to_xmlschema }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.5</priority>
        <custom:keywords> {{ file.basename | replace: '-', ' ' | capitalize }}, CyberPrivacyProtecTech, cybersecurity, privacy, data protection, consulting, Paris, Alexey Nazarov </custom:keywords>
        <image:image>
            <image:loc>{{ site.url }}{{ site.baseurl }}{{ file.path | remove: 'index.html' }}</image:loc>
            <image:title>{{ file.basename | replace: '-', ' ' | capitalize }}</image:title>
            <image:caption>{{ file.basename | replace: '-', ' ' | capitalize }}, CyberPrivacyProtecTech, cybersecurity, privacy, data protection, consulting, Paris, Alexey Nazarov</image:caption>
        </image:image>
        <custom:link rel="canonical" href="{{ site.url }}{{ site.baseurl }}{{ file.path | remove: 'index.html' }}" />
    </url>
    {% endif %}
    {% endfor %}
</urlset>

