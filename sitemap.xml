---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  {% for post in site.posts %}
    <url>
      <loc>{{ post.url | absolute_url | remove: 'index.html' }}</loc>
      <lastmod>{% if post.last_modified_at %}{{ post.last_modified_at | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
      {% if post.image %}
      <image:image>
        <image:loc>{{ post.image | absolute_url }}</image:loc>
      </image:image>
      {% endif %}
    </url>
  {% endfor %}
  {% for page in site.pages %}
    {% unless page.sitemap.exclude == "yes" or page.url contains "assets" %}
    <url>
      <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
      <lastmod>{% if page.last_modified_at %}{{ page.last_modified_at | date_to_xmlschema }}{% else %}{{ page.date | date_to_xmlschema }}{% endif %}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.9</priority>
      {% if page.image %}
      <image:image>
        <image:loc>{{ page.image | absolute_url }}</image:loc>
      </image:image>
      {% endif %}
    </url>
    {% endunless %}
  {% endfor %}
  {% for file in site.static_files %}
    {% if file.extname == ".png" or file.extname == ".jpg" or file.extname == ".jpeg" or file.extname == ".ico" %}
    <url>
      <loc>{{ file.path | absolute_url }}</loc>
      <lastmod>{{ file.modified_time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.5</priority>
      <image:image>
        <image:loc>{{ file.path | absolute_url }}</image:loc>
      </image:image>
    </url>
    {% endif %}
  {% endfor %}
  <url>
    <loc>{{ site.url }}/assets/images/logo.png</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.5</priority>
    <image:image>
      <image:loc>{{ site.url }}/assets/images/logo.png</image:loc>
    </image:image>
  </url>
  <url>
    <loc>{{ site.url }}/assets/images/favicon.ico</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.5</priority>
    <image:image>
      <image:loc>{{ site.url }}/assets/images/favicon.ico</image:loc>
    </image:image>
  </url>
</urlset>

